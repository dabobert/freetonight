<div id="articles">
  <h2 id="month"><%= @date.strftime("%B %Y") %></h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if false && @articles_by_date[date] %>
    <ul>
      <% @articles_by_date[date].each do |article| %>
        <li><%= link_to article.name, article %></li>
      <% end %>
    </ul>
    <% end %>
  <% end %>
</div>